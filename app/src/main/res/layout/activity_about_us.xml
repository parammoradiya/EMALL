<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/Aboutus_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <!-- <ListView
         android:id="@+id/listview"
         android:layout_below="@id/Register_toolbar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"></ListView>-->

    <ScrollView
        android:layout_below="@+id/Aboutus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/splash_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V 0.1.0"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="E-Mall Make Pay"
                    android:textAlignment="center"
                    android:textColor="#3498DB"
                    android:textSize="20sp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/about_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:id="@+id/facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/facebookicon"
                            android:background="@drawable/ic_facebookicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            />
                        <TextView
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="like us on facebook"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/facebookicon"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:id="@+id/instagram"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/instagramicon"
                            android:background="@drawable/ic_instagramicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="2dp"
                            />
                        <TextView
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="follow on instagram"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/instagramicon"/>

                    </RelativeLayout>

                    <!-- <Button
                         android:drawablePadding="5dp"
                         android:drawableLeft="@drawable/ic_facebookicon"
                         android:id="@+id/facebook"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:background="@drawable/facebookbutton"
                         android:text="like us on facebook"
                         android:layout_below="@+id/facebook_relativelayout"/>-->
                    <!--
                             <Button
                                 android:layout_below="@+id/facebook_relativelayout"
                                 android:id="@+id/instagram"
                                 android:drawableLeft="@drawable/ic_instagramicon"
                                 android:layout_width="wrap_content"
                                 android:layout_centerHorizontal="true"
                                 android:layout_height="wrap_content"
                                 android:layout_margin="10dp"
                                 android:padding="10dp"
                                 android:paddingRight="5dp"
                                 android:background="@drawable/facebookbutton"
                                 android:text="follow on instagram" />
         -->
                    <!--<Button
                        android:layout_below="@id/instagram"
                        android:id="@+id/policy"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounde_corner_btn"
                        android:text="privacy policy" />-->
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>